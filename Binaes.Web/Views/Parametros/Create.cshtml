@model Binaes.Web.Models.Parametro

@{
    ViewData["Title"] = "Crear parámetro";
}

<h1 class="mb-4">Crear parámetro</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="PlazoDias" class="form-label"></label>
                <input asp-for="PlazoDias" type="number" class="form-control" />
                <span asp-validation-for="PlazoDias" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TopePrestamosActivos" class="form-label"></label>
                <input asp-for="TopePrestamosActivos" type="number" class="form-control" />
                <span asp-validation-for="TopePrestamosActivos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaxRenovaciones" class="form-label"></label>
                <input asp-for="MaxRenovaciones" type="number" class="form-control" />
                <span asp-validation-for="MaxRenovaciones" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
