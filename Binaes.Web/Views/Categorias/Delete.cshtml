@model Binaes.Web.Models.Categoria

@{
    ViewData["Title"] = "Eliminar categoría";
}

<h1 class="mb-3 text-danger">Eliminar categoría</h1>

<div class="alert alert-warning">
    <strong>¿Estás segura/o que deseas eliminar esta categoría?</strong><br />
    Esta acción es permanente y no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Nombre</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
        </dl>

    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        ??? Eliminar
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Volver a la lista
    </a>
</form>
