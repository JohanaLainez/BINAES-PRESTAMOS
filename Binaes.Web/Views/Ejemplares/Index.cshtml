@model IEnumerable<Binaes.Web.Models.Ejemplar>

@{
    ViewData["Title"] = "Ejemplares";
}

<h1 class="mb-4">Ejemplares</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ Crear nuevo ejemplar</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Libro</th>
            <th>Código interno</th>
            <th>Estado</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.Libro?.Titulo</td>

                <td>@item.CodigoInterno</td>

                <td>@item.Estado</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
