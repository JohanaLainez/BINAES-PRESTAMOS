@model Binaes.Web.Models.Ejemplar

@{
    ViewData["Title"] = "Detalles del ejemplar";
}

<h1 class="mb-4">Detalles del ejemplar</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Información general</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Libro</dt>
            <dd class="col-sm-9">
                @Model.Libro?.Titulo
            </dd>

            <dt class="col-sm-3 fw-bold">Código interno</dt>
            <dd class="col-sm-9">
                @Model.CodigoInterno
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @Model.Estado
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        ✏️ Editar
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        Volver a la lista
    </a>
</div>
