@model Binaes.Web.Models.Ejemplar

@{
    ViewData["Title"] = "Editar ejemplar";
}

<h1 class="mb-4">Editar ejemplar</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <!-- LibroId (select) -->
            <div class="mb-3">
                <label asp-for="LibroId" class="form-label"></label>
                <select asp-for="LibroId" asp-items="ViewBag.LibroId" class="form-select"></select>
                <span asp-validation-for="LibroId" class="text-danger"></span>
            </div>

            <!-- Código interno -->
            <div class="mb-3">
                <label asp-for="CodigoInterno" class="form-label"></label>
                <input asp-for="CodigoInterno" class="form-control" />
                <span asp-validation-for="CodigoInterno" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
