@model Binaes.Web.Models.Ejemplar

@{
    ViewData["Title"] = "Eliminar ejemplar";
}

<h1 class="mb-3 text-danger">Eliminar ejemplar</h1>

<div class="alert alert-warning">
    <strong>¿Estás segura/o de que deseas eliminar este ejemplar?</strong><br />
    Esta acción es permanente y no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h4 class="card-title">Información del ejemplar</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Libro</dt>
            <dd class="col-sm-9">
                @Model.Libro?.Titulo
            </dd>

            <dt class="col-sm-3 fw-bold">Código interno</dt>
            <dd class="col-sm-9">
                @Model.CodigoInterno
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @Model.Estado
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        🗑️ Eliminar
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Volver a la lista
    </a>
</form>
