@model IEnumerable<Binaes.Web.Models.LibroAutor>

@{
    ViewData["Title"] = "Relación Libro - Autor";
}

<h1 class="mb-4">Relaciones Libro - Autor</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ Crear nueva relación</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Libro</th>
            <th>Autor</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Libro?.Titulo ?? $"ID: {item.LibroId}")</td>

                <td>@(item.Autor?.Nombre ?? $"ID: {item.AutorId}")</td>

                <td>
                    <a asp-action="Edit"
                       asp-route-libroId="@item.LibroId"
                       asp-route-autorId="@item.AutorId"
                       class="btn btn-sm btn-warning me-1">Editar</a>

                    <a asp-action="Details"
                       asp-route-libroId="@item.LibroId"
                       asp-route-autorId="@item.AutorId"
                       class="btn btn-sm btn-info text-white me-1">Detalles</a>

                    <a asp-action="Delete"
                       asp-route-libroId="@item.LibroId"
                       asp-route-autorId="@item.AutorId"
                       class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
