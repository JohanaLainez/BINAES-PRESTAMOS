@model LibroAutor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>LibroAutor</h4>
    <hr />
    <dl class="row">

        <!-- LIBRO -->
        <dt class="col-sm-2">
            Libro
        </dt>
        <dd class="col-sm-10">
            @Model.Libro?.Titulo ?? ("ID: " + Model.LibroId)
        </dd>

        <!-- AUTOR -->
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Model.Autor?.Nombre ?? ("ID: " + Model.AutorId)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LibroId" />
        <input type="hidden" asp-for="AutorId" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
