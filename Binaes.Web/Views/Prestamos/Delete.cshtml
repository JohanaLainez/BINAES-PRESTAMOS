@model Binaes.Web.Models.Prestamo

@{
    ViewData["Title"] = "Eliminar préstamo";
}

<h1 class="mb-3">Eliminar préstamo</h1>

<h3>¿Seguro que deseas eliminar este registro?</h3>

<div class="card shadow-sm mt-3 mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Usuario</dt>
            <dd class="col-sm-9">
                @Model.Usuario?.Nombre ?? $"ID: {Model.UsuarioId}"
            </dd>

            <dt class="col-sm-3 fw-bold">Staff</dt>
            <dd class="col-sm-9">
                @Model.Staff?.Nombre ?? $"ID: {Model.StaffId}"
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de préstamo</dt>
            <dd class="col-sm-9">
                @Model.FechaPrestamo.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de vencimiento</dt>
            <dd class="col-sm-9">
                @Model.FechaVencimiento.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de devolución</dt>
            <dd class="col-sm-9">
                @(Model.FechaDevolucion.HasValue
                                ? Model.FechaDevolucion.Value.ToString("yyyy-MM-dd")
                                : "Aún no devuelto")
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @Model.Estado
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
