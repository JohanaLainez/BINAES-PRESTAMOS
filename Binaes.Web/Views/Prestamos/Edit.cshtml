@model Binaes.Web.Models.Prestamo

@{
    ViewData["Title"] = "Editar préstamo";
}

<h1 class="mb-4">Editar préstamo</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="UsuarioId" class="form-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StaffId" class="form-label">Staff</label>
                <select asp-for="StaffId" class="form-select" asp-items="ViewBag.StaffId"></select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaPrestamo" class="form-label">Fecha de préstamo</label>
                <input asp-for="FechaPrestamo" type="date" class="form-control" />
                <span asp-validation-for="FechaPrestamo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaVencimiento" class="form-label">Fecha de vencimiento</label>
                <input asp-for="FechaVencimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDevolucion" class="form-label">Fecha de devolución</label>
                <input asp-for="FechaDevolucion" type="date" class="form-control" />
                <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
