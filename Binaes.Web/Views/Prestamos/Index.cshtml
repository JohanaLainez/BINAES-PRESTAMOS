@model IEnumerable<Prestamo>

@{
    ViewData["Title"] = "Listado de Préstamos";
}

<h1>Listado de Préstamos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Staff</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Vencimiento</th>
            <th>Fecha Devolución</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Usuario -->
                <td>
                    @(item.Usuario?.Nombre ?? $"ID: {item.UsuarioId}")
                </td>

                <!-- Staff -->
                <td>
                    @(item.Staff?.Nombre ?? $"ID: {item.StaffId}")
                </td>

               
                <td>@item.FechaPrestamo.ToString("yyyy-MM-dd")</td>

                <td>@item.FechaVencimiento.ToString("yyyy-MM-dd")</td>

                <td>
                    @(item.FechaDevolucion.HasValue
                                    ? item.FechaDevolucion.Value.ToString("yyyy-MM-dd")
                                    : "Aún no devuelto")
            </td>

            
                <td>@item.Estado</td>

              
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
                }
    </tbody>
</table>
