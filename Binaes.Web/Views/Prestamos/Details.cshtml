@model Binaes.Web.Models.Prestamo

@{
    ViewData["Title"] = "Detalles del préstamo";
}

<h1 class="mb-3">Detalles del préstamo</h1>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Usuario</dt>
            <dd class="col-sm-9">
                @Model.Usuario?.Nombre ?? $"ID: {Model.UsuarioId}"
            </dd>

            <dt class="col-sm-3 fw-bold">Staff</dt>
            <dd class="col-sm-9">
                @Model.Staff?.Nombre ?? $"ID: {Model.StaffId}"
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de préstamo</dt>
            <dd class="col-sm-9">
                @Model.FechaPrestamo.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de vencimiento</dt>
            <dd class="col-sm-9">
                @Model.FechaVencimiento.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3 fw-bold">Fecha de devolución</dt>
            <dd class="col-sm-9">
                @(Model.FechaDevolucion?.ToString("yyyy-MM-dd") ?? "Aún no devuelto")
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @Model.Estado
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
