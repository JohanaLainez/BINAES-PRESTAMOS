@model Binaes.Web.Models.PrestamoItem

@{
    ViewData["Title"] = "Editar ítem de préstamo";
}

<h1 class="mb-4">Editar ítem de préstamo</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="PrestamoId" class="form-label">Préstamo</label>
                <select asp-for="PrestamoId" class="form-select" asp-items="ViewBag.PrestamoId"></select>
                <span asp-validation-for="PrestamoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EjemplarId" class="form-label">Ejemplar</label>
                <select asp-for="EjemplarId" class="form-select" asp-items="ViewBag.EjemplarId"></select>
                <span asp-validation-for="EjemplarId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Renovaciones" class="form-label"></label>
                <input asp-for="Renovaciones" type="number" class="form-control" />
                <span asp-validation-for="Renovaciones" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDevolucion" class="form-label"></label>
                <input asp-for="FechaDevolucion" type="date" class="form-control" />
                <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
