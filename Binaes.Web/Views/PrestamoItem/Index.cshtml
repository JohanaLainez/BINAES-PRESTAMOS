@model IEnumerable<Binaes.Web.Models.PrestamoItem>

@{
    ViewData["Title"] = "Ítems de Préstamo";
}

<h1>Ítems de Préstamo</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Préstamo</th>
            <th>Ejemplar</th>
            <th>Libro</th>
            <th>Renovaciones</th>
            <th>Fecha de devolución</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Prestamo?.Id</td>

                <td>
                    @item.Ejemplar?.CodigoInterno
                    <span class="text-muted">(ID: @item.EjemplarId)</span>
                </td>

                <td>
                    @item.Ejemplar?.Libro?.Titulo
                </td>

                <td>@item.Renovaciones</td>

                <td>
                    @(item.FechaDevolucion?.ToString("yyyy-MM-dd") ?? "No asignada")
                </td>

                <td>@item.Estado</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
