@model Staff

@{
    ViewData["Title"] = "Eliminar Staff";
}

<h1 class="mb-3 text-danger">Eliminar Staff</h1>

<div class="alert alert-warning">
    <strong>¿Estás segura/o de eliminar este registro?</strong><br />
    Esta acción no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3 fw-bold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Rol</dt>
            <dd class="col-sm-9">@Model.Rol</dd>

            <dt class="col-sm-3 fw-bold">Activo</dt>
            <dd class="col-sm-9">
                @(Model.Activo ? "Sí" : "No")
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
