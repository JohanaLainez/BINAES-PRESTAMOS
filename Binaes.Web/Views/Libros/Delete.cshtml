@model Binaes.Web.Models.Libro

@{
    ViewData["Title"] = "Eliminar libro";
}

<h1 class="mb-3 text-danger">Eliminar libro</h1>

<div class="alert alert-warning">
    <strong>¿Estás segura/o que deseas eliminar este libro?</strong>
    <br />
    Esta acción es permanente.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-3 fw-bold">ISBN</dt>
            <dd class="col-sm-9">@Model.Isbn</dd>

            <dt class="col-sm-3 fw-bold">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3 fw-bold">Año de publicación</dt>
            <dd class="col-sm-9">@Model.AnioPublicacion</dd>

            <dt class="col-sm-3 fw-bold">Categoría</dt>
            <dd class="col-sm-9">
                @Model.Categoria?.Nombre ?? $"ID: {Model.CategoriaId}"
            </dd>

        </dl>

    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">🗑 Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</form>
