@model IEnumerable<Binaes.Web.Models.Libro>

@{
    ViewData["Title"] = "Libros";
}

<h1 class="mb-4">Libros</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ Crear nuevo libro</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ISBN</th>
            <th>Título</th>
            <th>Año</th>
            <th>Categoría</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Isbn</td>
                <td>@item.Titulo</td>
                <td>@item.AnioPublicacion</td>
                <td>@(item.Categoria?.Nombre ?? $"ID: {item.CategoriaId}")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
